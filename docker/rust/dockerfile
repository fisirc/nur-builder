FROM rust:1.87-slim

RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    pkg-config \
    libssl-dev \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

RUN rustup target add wasm32-unknown-unknown

WORKDIR /app

CMD ["cargo", "build", "--target", "wasm32-unknown-unknown", "--release"]
